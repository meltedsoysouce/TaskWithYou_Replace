<FluentDialog @ref="Dialog" Modal="true" Hidden="true">
    <FluentDialogHeader>カードの編集</FluentDialogHeader>
    <FluentDialogBody>
        @if (ViewModel is not null)
        {
            <EditForm Model="@ViewModel">
                <FluentStack
                    Orientation="Orientation.Vertical"
                    HorizontalAlignment="@HorizontalAlignment.Center"
                    VertifcalAlignment="@VerticalAlignment.Center"
                    HorizontalGap="10">
                    <FluentStack
                        HorizontalAlignment="@HorizontalAlignment.Left"
                        VerticalAlignment="@VerticalAlignment.Center">
                        <FluentInputLabel>
                            タイトル
                        </FluentInputLabel>
                        <FluentTextField @bind-Value="ViewModel.Title" />
                    </FluentStack>
                    <FluentStack
                        HorizontalAlignment="@HorizontalAlignment.Left"
                        VerticalAlignment="@VerticalAlignment.Center">
                        <FluentDatePicker Label="作成日"
                        @bind-Value="@ViewModel.CreateAt" ReadOnly/>
                    </FluentStack>
                    <FluentStack
                        HorizontalAlignment="@HorizontalAlignment.Left"
                        VerticalAlignment="@VerticalAlignment.Center">
                        <FluentDatePicker
                            Label="期　限"
                            @bind-Value="@ViewModel.DeadLine" />
                    </FluentStack>
                    <FluentStack
                        HorizontalAlignment="@HorizontalAlignment.Left"
                        VerticalAlignment="@VerticalAlignment.Center">
                        <FluentInputLabel>
                            詳　細
                        </FluentInputLabel>
                        <FluentTextArea @bind-Value="ViewModel.Description" />
                    </FluentStack>
                </FluentStack>
            </EditForm>
        }
    </FluentDialogBody>
