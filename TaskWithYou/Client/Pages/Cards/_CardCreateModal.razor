@using TaskWithYou.Shared.ViewModels.Cards;
@implements IDialogContentComponent<CardCreateViewModel>

@if (Content is not null)
{
    <EditForm Model="@Content">
        <FluentStack Orientation="Orientation.Vertical"
            HorizontalAlignment="@HorizontalAlignment.Center"
            VertifcalAlignment="@VerticalAlignment.Center"
            HorizontalGap="10">
            <FluentStack HorizontalAlignment="@HorizontalAlignment.Left"
                VerticalAlignment="@VerticalAlignment.Center">
                <FluentInputLabel>
                    タイトル
                </FluentInputLabel>
                <FluentTextField @bind-Value="Content.Title" />
            </FluentStack>
            <FluentStack HorizontalAlignment="@HorizontalAlignment.Left"
                VerticalAlignment="@VerticalAlignment.Center">
                <FluentDatePicker Label="作成日" @bind-Value="@Content.CreateAt" ReadOnly/>
            </FluentStack>
            <FluentStack HorizontalAlignment="@HorizontalAlignment.Left"
                VerticalAlignment="@VerticalAlignment.Center">
                <FluentDatePicker Label="期　限" @bind-Value="@Content.DeadLine" />
            </FluentStack>
            <FluentStack HorizontalAlignment="@HorizontalAlignment.Left"
                VerticalAlignment="@VerticalAlignment.Center">
                <FluentInputLabel>
                    詳　細
                </FluentInputLabel>
                <FluentTextArea @bind-Value="Content.Description" />
            </FluentStack>
        </FluentStack>
    </EditForm>
}